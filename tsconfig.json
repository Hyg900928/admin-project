{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "sourceMap": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "target": "es2016",
    "allowJs": true,
    "baseUrl": ".",
    "lib": [
      "dom",
      "es6",
      "es7",
      "es2017"
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "types/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
